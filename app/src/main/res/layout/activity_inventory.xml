<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="2"
    android:rowCount="6"
    android:useDefaultMargins="true"
    tools:context="com.libreinventory.libreinventory.InventoryActivity">

        <!-- plante -->

        <TextView
            android:layout_height="60dip"
            android:layout_column="0"
            android:layout_gravity="right|center"
            android:layout_row="1"
            android:gravity="center"
            android:text="Plante :" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextProduct"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="" >

            <requestFocus />
        </AutoCompleteTextView>

    <!-- prix -->

    <TextView
        android:layout_height="60dip"
        android:layout_column="0"
        android:layout_gravity="right|center"
        android:layout_row="2"
        android:text="Référence :" />

    <EditText
        android:id="@+id/editTextRef"
        android:layout_width="match_parent"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:ems="10"
        android:inputType="numberDecimal" >
    </EditText>

        <!-- quantite -->

        <TextView
            android:layout_height="60dip"
            android:layout_column="0"
            android:layout_gravity="right|center"
            android:layout_row="3"
            android:text="Quantite :" />

        <EditText
            android:id="@+id/editTextQuantite"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="1" />

    <!-- localisation -->

    <TextView
        android:layout_height="60dip"
        android:layout_column="0"
        android:layout_gravity="right|center"
        android:layout_row="4"
        android:text="Localisation :" />

    <EditText
        android:id="@+id/editTextLoc"
        android:layout_width="match_parent"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:ems="10"
        android:inputType="text"
        android:text="1" />


    <Button
        android:id="@+id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_weight="1"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="Valider"/>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_weight="1"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="Annuler"/>

</GridLayout>
